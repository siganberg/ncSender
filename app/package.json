{
  "name": "ncsender",
  "version": "0.3.20",
  "description": "ncSender - Unified CNC Controller Electron App",
  "homepage": "https://github.com/siganberg/ncSender",
  "author": {
    "name": "Francis Marasigan",
    "email": "support@franciscreation.com"
  },
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "predev": "lsof -ti:8090 | xargs -r kill -9 2>/dev/null || true",
    "dev": "npm run build:client && cross-env NODE_ENV=development electron .",
    "dev:hot": "concurrently -k --raw \"npm run server:dev\" \"npm run client:dev\"",
    "dev:kiosk": "npm run build:client && cross-env NODE_ENV=development electron . --kiosk",
    "dev:headless": "npm run build:client && cross-env NODE_ENV=development electron . --server-only",
    "server:dev": "cross-env NODE_ENV=development node electron/server-standalone.js",
    "client:dev": "cd client && npm run dev",
    "build": "npm run build:client",
    "build:client": "cd client && npm run build",
    "start": "npm run build && electron .",
    "start:kiosk": "npm run build && electron . --kiosk",
    "start:headless": "npm run build && electron . --server-only",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "install:all": "npm install && cd client && npm install",
    "plugins:watch": "node ../.scripts/watch-plugins.mjs",
    "dev:hot:plugins": "concurrently -k --raw \"npm run server:dev\" \"npm run client:dev\" \"npm run plugins:watch\""
  },
  "dependencies": {
    "@serialport/parser-readline": "^12.0.0",
    "adm-zip": "^0.5.12",
    "cors": "^2.8.5",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "multer": "^2.0.2",
    "p-queue": "^9.0.0",
    "serialport": "^12.0.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1"
  },
  "build": {
    "appId": "com.ncsender.app",
    "productName": "ncSender",
    "publish": [
      {
        "provider": "github",
        "owner": "siganberg",
        "repo": "ncSender"
      }
    ],
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "client/dist/**/*",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "**/*.mtl"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icons",
      "category": "Office",
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "Francis Marasigan <support@franciscreation.com>"
    }
  }
}
